{
  "name": "vscode-gitui",
  "displayName": "vscode-gitui",
  "description": "A VSCode extension to open GitUI in an integrated terminal.",
  "version": "0.1.0",
  "icon": "assets/icon.png",
  "license": "MIT",
  "publisher": "gymynnym",
  "author": {
    "name": "gymynnym",
    "url": "https://github.com/gymynnym"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gymynnym/vscode-gitui.git"
  },
  "homepage": "https://github.com/gymynnym/vscode-gitui.git",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-gitui.open",
        "title": "Open GitUI"
      },
      {
        "command": "vscode-gitui.reload",
        "title": "Reload GitUI"
      }
    ],
    "configuration": {
      "title": "GitUI Extension Settings",
      "properties": {
        "vscode-gitui.useWSL": {
          "type": "boolean",
          "default": false,
          "description": "Enable if using GitUI via WSL (Windows only)."
        }
      }
    },
    "keybindings": [
      {
        "command": "vscode-gitui.open",
        "linux": "ctrl+alt+g",
        "win": "ctrl+alt+g",
        "mac": "ctrl+cmd+g"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "test": "vscode-test",
    "lint": "eslint src",
    "format:check": "prettier --check .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
